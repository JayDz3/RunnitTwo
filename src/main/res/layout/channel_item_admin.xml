<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/eightDp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/channel_item_admin_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteenDp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/channel_item_delete_icon"
        android:textSize="@dimen/sixteenSP"
        android:text="@string/channel_dialog_hint"/>

    <ImageButton
        android:id="@+id/channel_item_admin_delete_icon"
        android:src="@drawable/ic_remove_circle_outline_black_24dp"
        android:contentDescription="@string/channel_activity_remove_channel_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sixteenDp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/channel_item_admin_send_notification_icon"/>

    <ImageButton
        android:id="@+id/channel_item_admin_send_notification_icon"
        android:src="@drawable/ic_input_blue_24dp"
        android:contentDescription="@string/channel_activity_send_notification_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>